<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cloud.columbia.edu.footprint" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="Facebook Login" >
        </activity>
        <activity
            android:name=".PhotoTake"
            android:label="@string/title_activity_photo_take" >
        </activity>
        <activity
            android:name=".UploadingPhoto"
            android:label="@string/title_activity_uploading_photo" >
        </activity>
        <activity
            android:name=".UploadPhoto"
            android:label="@string/title_activity_upload_photo" >
        </activity>
    </application>

</manifest>
